{
  "model": {
    "type": "minecraft:select",
    "property": "minecraft:custom_model_data",
    "cases": [
      {
        "when": "up_down",
        "model": {
          "type": "minecraft:model",
          "model": "magical_addons:block/sparkstone_cluster_ud"
        }
      },
      {
        "when": "west_east",
        "model": {
          "type": "minecraft:model",
          "model": "magical_addons:block/sparkstone_cluster_we"
        }
      },
      {
        "when": "north_south",
        "model": {
          "type": "minecraft:model",
          "model": "magical_addons:block/sparkstone_cluster_ns"
        }
      }
    ],
    "fallback": {
      "type": "minecraft:model",
      "model": "magical_addons:item/sparkstone_cluster"
    }
  }
}